<hibernate-configuration>
    <session-factory>

        <!-- JDBC Connection -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/quizapp</property>
        <property name="hibernate.connection.username">quizuser</property>
        <property name="hibernate.connection.password">quizpass123</property>

        <!-- Hibernate Dialect for PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Show SQL in console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Auto create/update tables -->
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Default schema -->
        <property name="hibernate.default_schema">public</property>


        <!-- Entity mappings -->
        <mapping class="org.example.models.User"/>
        <mapping class="org.example.models.Subject"/>
        <mapping class="org.example.models.Quiz"/>
        <mapping class="org.example.models.Question"/>
        <mapping class="org.example.models.Result"/>

    </session-factory>
</hibernate-configuration>
